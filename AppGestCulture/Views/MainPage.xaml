<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:AppGestCulture.ViewModels"
             x:Class="AppGestCulture.Views.MainPage"
             x:DataType="ViewModels:MainPageViewModel"
             Shell.NavBarIsVisible="False">
    <StackLayout Padding="20">
   
        <Label Text="Connexion" FontSize="Large" Margin="0,20,0,20" />

        <Label Text="Nom d'utilisateur" />
        <Entry Text="{Binding Username}" />

        <Label Text="Mot de passe" />
        <Entry Text="{Binding Password}" IsPassword="True"  />

        <Button Text="Se connecter" Command="{Binding LoginCommand}" Clicked="Onclicked" Margin="0,20,0,0"  />

            <Label Text="{Binding ErrorMessage}" TextColor="Red" Margin="0,20,0,0"  />
    </StackLayout>
</ContentPage>
